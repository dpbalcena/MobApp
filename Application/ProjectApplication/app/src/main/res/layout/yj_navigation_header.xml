<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/gray">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@android:color/transparent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/navigation_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/ic_account_circle_white_48dp"
            android:backgroundTint="@color/green"
            android:layout_gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/navigation_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="center"
                android:text="Jana Gardon"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/navigation_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="janagardon@yahoo.com"
                android:textColor="@color/trans_white"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

    </LinearLayout>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_gravity="bottom"-->
        <!--android:background="#dddddd" />-->

</LinearLayout>